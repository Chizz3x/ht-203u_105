<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#000000"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/home_left_layout_weight"
        layout="@layout/include_home_left_layout"/>
    <RelativeLayout
        android:id="@+id/home_center_layout"
        android:background="#000000"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/home_center_layout_weight">
        <com.hti.xtherm.hti160203u.widget.ThermalImageView
            android:id="@+id/center_thermalview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/center_recordtime"
            android:background="@drawable/shape_record_time_background"
            android:padding="10dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="00:00:00"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>
        <com.hti.xtherm.hti160203u.widget.LoadView
            android:id="@+id/center_loadview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/center_pluginanimation"
            android:background="@drawable/home_plugin_device_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
    <include
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/home_right_layout_weight"
        layout="@layout/include_home_right_layout"/>
</LinearLayout>
