<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/titlebar_color"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/video_title_layout"
        android:background="@color/titlebar_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/video_title_back"
            android:paddingRight="35dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/selector_public_back_icon"
            android:layout_centerVertical="true"/>
        <TextView
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:id="@+id/video_title_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_title"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/video_title_menu"
            android:paddingLeft="35dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/selector_titlebar_menu_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <FrameLayout
        android:background="#fafafa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GridView
            android:id="@+id/video_gridview"
            android:padding="@dimen/gallery_gridview_padding"
            android:visibility="gone"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="#00000000"
            android:cacheColorHint="#00000000"
            android:horizontalSpacing="@dimen/gallery_gridview_hs"
            android:verticalSpacing="@dimen/gallery_gridview_vs"
            android:numColumns="@integer/gallery_gridview_numcolumns"/>
        <RelativeLayout
            android:orientation="vertical"
            android:id="@+id/video_nothing_layout"
            android:paddingTop="20dp"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/video_nothing_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/selector_gallery_search_icon"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:textSize="25sp"
                android:textStyle="italic|bold"
                android:textColor="#888888"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/video_nothing"
                android:layout_below="@+id/video_nothing_search"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>
